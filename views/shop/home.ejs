              <div class="col-md-3 product-index-box">
                <div class="single-product d-flex flex-column h-100">
                  <a
                    class="title-link"
                    href="/products/<%=products[i].category.slug%>/<%=products[i]._id%>"
                    >
                    <img
                      src="<%= products[i].imagePath %>"
                      alt="Bag"
                      class="img-fluid" />
                  </a>
                  <div class="product-info">
                    <a
                      class="title-link"
                      href="/products/<%=products[i].category.slug%>/<%=products[i]._id%>"
                    >
                      <h6 class="mt-2 mb-2"><%= products[i].title %></h6></a
                    >
                    <div class="price">RS: <%= products[i].price %> /- </div>
                  </div>
                  <% if(products[i].available) {%>

                  <a href="/add-to-cart/<%=products[i]._id%>?addMethod=addToCart" 
                    class="btn btn-block btn-secondary button-style mt-auto mb-1" 
                    >
                    Add to Cart
                  </a>
                  <a
                    href="/add-to-cart/<%=products[i]._id%>?addMethod=buyNow"
                    class="btn btn-block btn-secondary button-style mt-auto mb-1"
                    >
                    Buy Now
                  </a>

                  <% } else { %>
                  <a
                    href="#"
                    class="btn btn-block btn-danger button-style-danger mt-2 mb-2"
                  >
                    Sold out
                  </a>
                  <%} %>
                </div>
              </div>
              <%}%>
            </div>
          </div>
          <!--/.First slide-->

          <!--Second slide-->
          <div class="carousel-item">
            <div class="row">
              
              <% for(let i=4; i<8; i++) { %>
              <div class="col-md-3 product-index-box">
                <div class="single-product d-flex flex-column h-80">
                  <a
                    class="title-link"
                    href="/products/<%=products[i].category.slug%>/<%=products[i]._id%>"
                  >
                    <img
                      src="<%= products[i].imagePath %>"
                      alt="Bag"
                      class="img-fluid"
                  /></a>
                  <div class="product-info">
                    <a
                      class="title-link"
                      href="/products/<%=products[i].category.slug%>/<%=products[i]._id%>"
                    >
                      <h6 class="mt-2 mb-2"><%= products[i].title %></h6></a
                    >
                    <div class="price">RS: <%= products[i].price %></div>
                  </div>
                  <% if(products[i].available) {%>
                <a href="/add-to-cart/<%=products[i]._id%>?addMethod=addToCart"
                  class="btn btn-block btn-secondary button-style mt-auto mb-1">
                  Add to Cart
                </a>
                <a href="/add-to-cart/<%=products[i]._id%>?addMethod=buyNow"
                  class="btn btn-block btn-secondary button-style mt-auto mb-1">
                  Buy Now
                </a>
                  <% } else { %>
                  <a
                    href="#"
                    class="btn btn-block btn-danger button-style-danger mt-2 mb-2"
                  >
                    Sold out
                  </a>
                  <%} %>
                </div>
              </div>
              <%}%>
            </div>
          </div>
          <!--/.Second slide-->

          <!--Third slide-->
          <div class="carousel-item">
            <div class="row">
              
              <% for(let i=8; i<12; i++) { %>
